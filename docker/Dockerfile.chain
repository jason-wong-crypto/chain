From ubuntu:18.04

RUN apt-get update && apt-get install -y \
     make \
     libzmq3-dev \
     libssl1.1 \
     curl \
     libprotobuf-dev \
     libssl-dev && \
     rm -rf /var/lib/apt/lists/*

arg BUILD_MODE

# copy the chain binary file
COPY ./target/${BUILD_MODE}/client-cli /usr/local/bin/
COPY ./target/${BUILD_MODE}/chain-abci /usr/local/bin/
COPY ./target/${BUILD_MODE}/client-rpc /usr/local/bin/
COPY ./target/${BUILD_MODE}/dev-utils /usr/local/bin/

STOPSIGNAL SIGTERM

# install sgx enclave pws
ARG SGX_ENCLAVE=https://download.01.org/intel-sgx/sgx-linux/2.7.1/distro/ubuntu18.04-server/libsgx-enclave-common_2.7.101.3-bionic1_amd64.deb

# install intel sgx sdk
RUN mkdir -p /opt/intel && \
    cd /opt/intel && \
    set -eux; \
    curl -L  ${SGX_ENCLAVE} -o common.deb &&\
    dpkg -i common.deb; rm common.deb;

# copy the enclave binary file and script
COPY ci-scripts/run_tx_query.sh /crypto-chain/bin/query/entrypoint.sh
COPY ci-scripts/run_tx_validation.sh /crypto-chain/bin/validation/entrypoint.sh

COPY chain-tx-enclave/tx-validation/bin/enclave.signed.so /crypto-chain/bin/validation/
COPY chain-tx-enclave/tx-validation/bin/tx-validation-app /crypto-chain/bin/validation/

COPY chain-tx-enclave/tx-query/bin/enclave.signed.so /crypto-chain/bin/query/
COPY chain-tx-enclave/tx-query/bin/tx-query-app /crypto-chain/bin/query/

WORKDIR /crypto-chain

ENV RUST_LOG=info
ENV TX_ENCLAVE_STORAGE=/crypto-chain/enclave-storage

ENV SGX_MODE=${SGX_MODE}
ENV NETWORK_ID=${NETWORK_ID}

ENV APP_PORT_VALIDATION=26650
ENV APP_PORT_QUERY=26651
ENV TX_QUERY_TIMEOUT=10
ENV TX_VALIDATION_CONN=${TX_VALIDATION_CONN}
